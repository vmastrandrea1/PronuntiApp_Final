<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:layout_margin="25dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="?attr/colorPrimary"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/exercise3_text_close"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:drawableEnd="@drawable/ic_close"
            android:drawableTint="@color/white" />

        <ImageView
            android:id="@+id/exercise_profile_image"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_exercise"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/id_esercizio3_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/esercizio_3"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/ex3_image_text_wrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="175dp"
                android:text="@string/immagine_sbagliata_colon"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="37dp" />

            <TextView
                android:id="@+id/ex3_image_text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/immagine_corretta_colon"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toEndOf="@id/ex3_image_text_wrong"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/image_previews_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="70dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/image_viewer_wrong_popup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/image_viewer_right_popup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/ex3_parola_da_ascoltare"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom|center"
            android:text="@string/parola_da_ascoltare_colon"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delete_exercise_3"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:text="@string/elimina_esercizio"
                android:drawableStart="@drawable/ic_delete"
                android:background="@drawable/rounded_corners_button_white"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
