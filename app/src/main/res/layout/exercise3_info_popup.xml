<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:layout_margin="25dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/blue"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#C600AC"
        android:padding="5dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/exercise3_text_close"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:drawableEnd="@drawable/ic_close"
            android:drawableTint="@color/white" />



        <ImageView
            android:id="@+id/exercise_profile_image"
            android:layout_width="183dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_exercise"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/id_esercizio3_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Esercizio 3"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ex3_image_text_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-80dp"
            android:text="Immagine Sbagliata: "
            android:textColor="@color/white" />

        <androidx.cardview.widget.CardView
            android:layout_width="109dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-80dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/image_viewer_wrong_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/ex3_image_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="-80dp"
            android:layout_marginTop="-145dp"
            android:text="Immagine Corretta: "
            android:textColor="@color/white" />

        <androidx.cardview.widget.CardView
            android:layout_width="109dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/image_viewer_right_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ex3_parola_da_ascoltare"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Parola da Ascoltare: "
            android:textColor="@color/white" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_exercise_3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="160dp"
            android:text="Elimina Esercizio"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_delete"
            android:background="@drawable/bg_btn"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deassign_exercise_3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Rimuovi Assegnazione"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="10dp"
            android:drawableStart="@drawable/ic_exercise"
            android:background="@drawable/bg_btn"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
