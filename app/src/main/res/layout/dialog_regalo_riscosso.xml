<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_dialog_background"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_dialog_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingBottom="50dp">

        <TextView
            android:id="@+id/textViewBenFatto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="Ben fatto" />

        <TextView
            android:id="@+id/textViewDescrizione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/textViewBenFatto"
            android:layout_marginTop="26dp"
            android:text="Congratulazioni! Hai ottenuto:" />

        <TextView
            android:id="@+id/textViewMoneteRegalo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@id/textViewDescrizione"
            android:drawableEnd="@drawable/ic_coin"
            android:drawableTint="#FFFFB700"
            android:drawablePadding="10sp"
            android:layout_marginTop="30dp"
            android:text="100 Monete" />

        <TextView
            android:id="@+id/textViewEsperienzaRegalo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/textViewMoneteRegalo"
            android:drawableEnd="@drawable/ic_esperienza"
            android:drawableTint="#FF0066FF"
            android:drawablePadding="8sp"
            android:layout_marginTop="10dp"
            android:text="500 Punti Esperienza" />

    </RelativeLayout>

</ScrollView>
