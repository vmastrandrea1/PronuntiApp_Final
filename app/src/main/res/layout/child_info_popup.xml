<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/txtClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/cerclebackground"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/child_profile_image"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/child_profile_image" />

        <TextView
            android:id="@+id/child_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pippo Baudo"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/child_birthdate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 Mar 74"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/child_therapist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dott. Mario"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view_therapy_child"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="Visualizza Terapie"
            android:drawableStart="@drawable/ic_exercise"
            android:background="@drawable/bg_btn"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/game_child"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="Gioca Adesso"
        android:drawableStart="@drawable/ic_game"
        android:background="@drawable/bg_btn"
        android:layout_gravity="center"
        android:visibility="gone"/>
</LinearLayout>