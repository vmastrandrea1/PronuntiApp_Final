<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e4d5c1">

    <!-- Titolo della schermata -->
    <ImageView
        android:id="@+id/scritta_classifica"
        android:layout_width="376dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="19dp"
        android:src="@drawable/classifica_scritta" />

    <!-- ScrollView con TableLayout -->
    <ScrollView
        android:id="@+id/scrollable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_scroll">

        <!-- TableLayout con una riga per i riquadri -->
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <!-- Riga con i riquadri -->
            <TableRow>

                <!-- Riquadro 1 -->
                <LinearLayout
                    android:id="@+id/riquadro1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_gray"
                    android:orientation="vertical">

                    <!-- Testo sovrapposto alla View  -->
                    <TextView
                        android:id="@+id/secondo_posto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Il tuo testo qui"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Riquadro 2 -->
                <LinearLayout
                    android:id="@+id/riquadro2"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_gold"
                    android:orientation="vertical">

                    <!-- Testo sovrapposto alla View   -->
                    <TextView
                        android:id="@+id/primo_posto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Il tuo testo qui"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Riquadro 3 -->
                <LinearLayout
                    android:id="@+id/riquadro3"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_bronze"
                    android:orientation="vertical">

                    <!-- Testo sovrapposto alla View    -->
                    <TextView
                        android:id="@+id/terzo_posto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Il tuo testo qui"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

            </TableRow>

            <!-- Aggiunta dinamica delle righe e le celle usando il codice Java -->

        </TableLayout>
    </ScrollView>


</LinearLayout>
