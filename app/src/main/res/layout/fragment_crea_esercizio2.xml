<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/id_esercizio2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/blue_button"
            android:elevation="5dp"
            android:hint="@string/nome_esercizio"
            android:inputType="textCapSentences"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/lightblue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tipo_es2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:text="@string/tipo_es2"
            android:fontFamily="@font/kid_font"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/descrizione_es2"
            app:layout_constraintTop_toBottomOf="@+id/id_esercizio2"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/descrizione_es2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            android:text="@string/descrizione_es2"
            app:layout_constraintTop_toBottomOf="@+id/tipo_es2"
            tools:layout_editor_absoluteX="0dp" />


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52">

            <EditText
                android:id="@+id/parola1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/blue_button"
                android:elevation="5dp"
                android:hint="@string/parola_1"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/lightblue"
                android:inputType="textCapCharacters"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/parola2"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@+id/parola1"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue_button"
                android:elevation="5dp"
                android:hint="@string/parola_2"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/lightblue"
                android:inputType="textCapCharacters"
                app:layout_constraintBottom_toBottomOf="@+id/parola1"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/parola3"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@+id/parola2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/blue_button"
                android:elevation="5dp"
                android:hint="@string/parola_3"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/lightblue"
                android:inputType="textCapCharacters"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
            app:layout_constraintVertical_bias="0.5"
            tools:layout_editor_absoluteX="0dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/annulla_btn_2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_corners_button_grey"
                android:text="@string/annulla" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/crea_esercizio_2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/rounded_corners_button_red"
                android:text="@string/crea"
                android:textColor="@color/white" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
