<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button190"
            style="@style/CardView"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Denominazione immagini" />

    </androidx.cardview.widget.CardView>

    <!-- Secondo pulsante card -->
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button191"
            style="@style/CardView"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ripetizione di sequenze di parole" />

    </androidx.cardview.widget.CardView>

    <!-- Terzo pulsante card -->
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button192"
            style="@style/CardView"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Riconoscimento di coppie minime" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
