<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/id_esercizio1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/blue_button"
            android:elevation="5dp"
            android:gravity="center"
            android:hint="@string/nome_esercizio"

            android:inputType="textCapSentences"
            android:textColor="@color/white"
            android:textColorHint="@color/lightblue"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tipo_es1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:text="@string/tipo_es1"
            android:fontFamily="@font/kid_font"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/descrizione_es2"
            app:layout_constraintTop_toBottomOf="@+id/id_esercizio1"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/descrizione_es2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            android:text="@string/descrizione_es1"
            app:layout_constraintTop_toBottomOf="@+id/tipo_es1"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/scegliImmagine_btn"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@drawable/blue_button"
            android:elevation="5dp"
            android:text="@string/scegli_immagine"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            app:layout_constraintTop_toBottomOf="@+id/scegliImmagine_btn">


            <androidx.cardview.widget.CardView
                android:id="@+id/preview_card_es1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/preview_immagine_es1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/rounded_corners_button_grey" />

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:id="@+id/relativeLayoutAiuti"
                android:layout_width="179dp"
                android:layout_height="180dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="30dp"
                app:layout_constraintStart_toEndOf="@+id/preview_card_es1">

                <EditText
                    android:id="@+id/aiuto1"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="25dp"
                    android:background="@drawable/blue_button"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:hint="@string/aiuto_1"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lightblue"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="24dp" />

                <EditText
                    android:id="@+id/aiuto2"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/aiuto1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/blue_button"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:hint="@string/aiuto_2"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lightblue"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/aiuto3"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/aiuto2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/blue_button"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:hint="@string/aiuto_3"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lightblue"
                    android:textSize="16dp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/annulla_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_corners_button_grey"
                android:text="@string/annulla" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonCreaEs1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/rounded_corners_button_red"
                android:text="@string/crea"
                android:textColor="@color/white" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>