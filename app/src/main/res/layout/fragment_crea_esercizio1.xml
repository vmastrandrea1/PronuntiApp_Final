<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/id_esercizio1"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/blubutton"
            android:hint="NOME ESERCIZIO"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tipo_es1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/tipo_es1"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/descrizione_es2"
            app:layout_constraintTop_toBottomOf="@+id/id_esercizio1"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/descrizione_es2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="20dp"
            android:text="@string/descrizione_es1"
            app:layout_constraintTop_toBottomOf="@+id/tipo_es1"
            tools:layout_editor_absoluteX="0dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/scegliImmagine_btn"
            android:layout_width="259dp"
            android:layout_height="80dp"
            android:background="@drawable/blubutton"
            android:text="Scegli immagine"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.43" />

        <androidx.cardview.widget.CardView
            android:id="@+id/preview_card_es1"
            android:layout_width="130dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scegliImmagine_btn"
            app:layout_constraintVertical_bias="0.08"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

        <ImageView
            android:id="@+id/preview_immagine_es1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/rounded_corners_button_grey" />

    </androidx.cardview.widget.CardView>


    <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/preview_card_es1"
            tools:layout_editor_absoluteX="0dp">

            <EditText
                android:id="@+id/aiuto1"
                android:layout_width="153dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="26dp"
                android:background="@drawable/blubutton"
                android:gravity="center"
                android:hint="AIUTO 1"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColorHint="@color/white"
                tools:layout_editor_absoluteX="24dp" />

            <EditText
                android:id="@+id/aiuto2"
                android:layout_width="153dp"
                android:layout_height="51dp"
                android:layout_below="@+id/aiuto1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="26dp"
                android:background="@drawable/blubutton"
                android:hint="AIUTO 2"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/aiuto3"
                android:layout_width="153dp"
                android:layout_height="51dp"
                android:layout_below="@+id/aiuto2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="26dp"
                android:background="@drawable/blubutton"
                android:hint="AIUTO 3"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColorHint="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/relativeLayout"
            app:layout_constraintTop_toBottomOf="@+id/preview_card_es1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonCreaEs1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="72dp"
                android:background="@drawable/rounded_corners_button_red"
                android:text="Crea"
                android:textColor="@color/white"
                app:cornerRadius="30dp"
                tools:layout_editor_absoluteX="225dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/annulla_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/buttonCreaEs1"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="68dp"
                android:background="@drawable/rounded_corners_button_grey"
                android:text="Annulla"
                app:cornerRadius="30dp" />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>