<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="#03A9F4"
    android:padding="5dp"
    android:layout_gravity="center"
    android:scrollbars="vertical">

    <TextView
        android:id="@+id/exercise_text_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/cerclebackground"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="372dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exercise_profile_image"
            android:layout_width="183dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_exercise" />

        <TextView
            android:id="@+id/id_esercizio1_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Esercizio 1"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/ex1_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-75dp"
                android:text="Immagine scelta: "
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/ex1_image_viewer"
                android:layout_width="132dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-110dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="147dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-102dp"
            android:layout_marginTop="-170dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aiuto1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Aiuto 1: "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/aiuto2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:text="Aiuto 2: "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/aiuto3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Aiuto 3: "
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_exercise_1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="180dp"
        android:text="Elimina Esercizio"
        android:drawableStart="@drawable/ic_delete"
        android:background="@drawable/bg_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deassign_exercise_1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-40dp"
        android:text="Rimuovi Assegnazione"
        android:drawableStart="@drawable/ic_exercise"
        android:background="@drawable/bg_btn"
        android:visibility="gone"/>
</LinearLayout>