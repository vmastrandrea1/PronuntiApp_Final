<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:gravity="center">


        <TextView
            android:id="@+id/tipo_es1"
            android:layout_width="330dp"
            android:layout_height="130dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:padding="30dp"
            android:text="@string/tipo_es_game1"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descrizione_es1"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:paddingHorizontal="40dp"
            android:text="@string/descrizione_es1_game"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tipo_es1" />


        <LinearLayout
            android:id="@+id/layout_image_helpers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descrizione_es1">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent">

                <ImageView
                    android:id="@+id/image_select_viewer"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rounded_corners_button_grey"
                    android:background="@android:color/transparent" />

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/aiuto1_btn"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/blubutton"
                    android:text="Aiuto 1"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:cornerRadius="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/aiuto2_btn"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/aiuto1_btn"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/blubutton"
                    android:text="Aiuto 2"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:cornerRadius="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/aiuto3_btn"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/aiuto2_btn"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/blubutton"
                    android:text="Aiuto 3"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:cornerRadius="16dp" />

            </RelativeLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/riproduci_audio_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/play_audio_button"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/confirm_choice_btn"
            app:layout_constraintEnd_toStartOf="@+id/mic_layout"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_image_helpers"
            app:layout_constraintVertical_bias="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/stop_riproduci_audio_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/stop_button"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/confirm_choice_btn"
            app:layout_constraintEnd_toStartOf="@+id/mic_layout"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_image_helpers"
            app:layout_constraintVertical_bias="0.5" />


        <RelativeLayout
            android:id="@+id/mic_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_image_helpers">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/record_solution_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rec_button" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/stop_record_solution_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/stop_button"
                android:visibility="gone" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_choice_btn"
            android:layout_width="156dp"
            android:layout_height="53dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/blubutton"
            android:text="Conferma"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mic_layout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>