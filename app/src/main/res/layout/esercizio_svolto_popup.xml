<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="475dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="25dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="?attr/colorPrimary"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/esercizio_svolto_text_close"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:drawableEnd="@drawable/ic_close"
            android:drawableTint="@color/white" />

        <ImageView
            android:id="@+id/exercise_profile_image"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_exercise"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/id_esercizio1_correzione_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/esercizio_1"
            android:textColor="@color/white"
            android:textStyle="bold" />



        <RelativeLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/riproduci_soluzione"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/play_audio_button_white"
                android:visibility="visible"
                android:layout_centerHorizontal="true"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ferma_riproduzione"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/stop_button_white"
                android:visibility="gone"
                android:layout_below="@id/riproduci_soluzione"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/ferma_riproduzione"
                android:layout_centerHorizontal="true">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/esercizio_corretto"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/giusto"
                    android:textAllCaps="true"
                    android:background="@drawable/rounded_corners_button_green"
                    android:textColor="@color/white"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/esercizio_sbagliato"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/sbagliato"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_corners_button_red"/>
            </LinearLayout>


            <TextView
                android:id="@+id/correzione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>



    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/visualizza_esercizio"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_corners_button_white"
        android:drawableStart="@drawable/ic_exercise"
        android:paddingLeft="10dp"
        android:text="@string/visualizza_esercizio"
        android:visibility="visible" />

</androidx.cardview.widget.CardView>
