<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="475dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="25dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/blue"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#03A9F4"
        android:padding="5dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/exercise_text_close"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:drawableEnd="@drawable/ic_close"
            android:drawableTint="@color/white" />

        <ImageView
            android:id="@+id/exercise_profile_image"
            android:layout_width="183dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_exercise"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/id_esercizio1_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Esercizio 1"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:gravity="center">


        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginTop="-170dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/audio_soluzione_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Audio: "
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/riproduci_soluzione"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_audio"
                android:text="Riproduci Soluzione"
                android:textColor="@color/black"
                android:background="@drawable/bg_btn"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ferma_soluzione"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp"
                android:drawableLeft="@drawable/ic_audio"
                android:text="Ferma Riproduzione"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:background="@drawable/bg_btn"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/correzzione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Correzione"
            android:textSize="15dp"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/visualizza_esercizio"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="180dp"
            android:background="@drawable/bg_btn"
            android:drawableStart="@drawable/ic_exercise"
            android:text="Visualizza Esercizio"
            android:visibility="visible" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
