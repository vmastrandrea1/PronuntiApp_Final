<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="650dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="25dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="?attr/colorPrimary"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/linear_layout_correzione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/myexercisesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:paddingLeft="16dp"
            android:text="@string/correggi_gli_esercizi"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:padding="5dp"
        android:layout_gravity="center">

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/TVesercizio_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="left|center"
                android:paddingHorizontal="10dp"
                android:drawableStart="@drawable/ic_exercise"
                android:background="@drawable/rounded_corners_button_white"
                android:drawablePadding="10dp"
                android:text="@string/esercizio_1"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/TVesercizio_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="left|center"
                android:paddingHorizontal="10dp"
                android:drawableStart="@drawable/ic_exercise"
                android:background="@drawable/rounded_corners_button_white"
                android:drawablePadding="10dp"
                android:text="@string/esercizio_2"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/TVesercizio_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="left|center"
                android:paddingHorizontal="10dp"
                android:drawableStart="@drawable/ic_exercise"
                android:background="@drawable/rounded_corners_button_white"
                android:drawablePadding="10dp"
                android:text="@string/esercizio_3"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <!-- Card 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/TVesercizio_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="left|center"
                android:paddingHorizontal="10dp"
                android:drawableStart="@drawable/ic_exercise"
                android:background="@drawable/rounded_corners_button_white"
                android:drawablePadding="10dp"
                android:text="@string/esercizio_4"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <!-- Card 5 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/TVesercizio_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="left|center"
                android:paddingHorizontal="10dp"
                android:drawableStart="@drawable/ic_exercise"
                android:background="@drawable/rounded_corners_button_white"
                android:drawablePadding="10dp"
                android:text="@string/esercizio_5"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>
