<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:backgroundTint="@color/colorPrimaryDark"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="475dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <!-- Content of Card 1 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_exercise"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_marginLeft="50dp"
                    android:textSize="25sp"
                    android:text="Esercizio 1"
                    android:textColor="#000000"
                    android:id="@+id/TVesercizio_1"/>
            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <!-- Content of Card 2 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_exercise"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_marginLeft="50dp"
                    android:textSize="25sp"
                    android:text="Esercizio 2"
                    android:textColor="#000000"
                    android:id="@+id/TVesercizio_2"/>
            </androidx.cardview.widget.CardView>

            <!-- Card 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <!-- Content of Card 3 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_exercise"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_marginLeft="50dp"
                    android:textSize="25sp"
                    android:text="Esercizio 3"
                    android:textColor="#000000"
                    android:id="@+id/TVesercizio_3"/>
            </androidx.cardview.widget.CardView>

            <!-- Card 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <!-- Content of Card 4 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_exercise"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_marginLeft="50dp"
                    android:textSize="25sp"
                    android:text="Esercizio 4"
                    android:textColor="#000000"
                    android:id="@+id/TVesercizio_4"/>
            </androidx.cardview.widget.CardView>

            <!-- Card 5 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <!-- Content of Card 5 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_exercise"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_marginLeft="50dp"
                    android:textSize="25sp"
                    android:text="Esercizio 5"
                    android:textColor="#000000"
                    android:id="@+id/TVesercizio_5"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>