<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="475dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="25dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/purple"
    app:cardElevation="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple"
        android:padding="5dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txtClose_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:drawableEnd="@drawable/ic_close"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="362dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/patient_profile_image"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/child_profile_image" />

            <TextView
                android:id="@+id/patient_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="@string/pippo_baudo"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patient_birthdate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/_18_marzo_74"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/child_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/mario_rossi"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/therapy_not_ready"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="@string/aggiungi_n_esercizi_per_creare_una_nuova_terapia"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="10dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/view_therapy_patient"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corners_button_white"
                android:drawableStart="@drawable/ic_exercise"
                android:paddingLeft="10dp"
                android:paddingHorizontal="10dp"
                android:text="@string/visualizza_terapie"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_therapy_patient"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="@string/crea_terapia"
                android:paddingHorizontal="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_add_circle"
                android:background="@drawable/rounded_corners_button_white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delete_patient"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:text="@string/elimina_paziente"
                android:paddingHorizontal="10dp"
                android:gravity="center"
                android:drawableStart="@drawable/ic_delete"
                android:background="@drawable/rounded_corners_button_white"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
