<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_cielo"
    android:id="@+id/wallpaper_game">

    <!-- ImageView per il percorso-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/map_sentiero"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/regalo_static"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            android:scaleX="-1"
            app:lottie_rawRes="@raw/regalo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.252"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <!-- ImageButton con vincoli del regalo-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/regalo_moving"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:scaleX="-1"
            android:visibility="gone"
            app:lottie_rawRes="@raw/regalo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.252"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <!-- ImageButton con vincoli della bandierina5-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bandierina_5"
            android:layout_width="54dp"
            android:layout_height="78dp"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:scaleX="-1"
            app:lottie_rawRes="@raw/waving_flag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.372"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.42" />


        <!-- ImageButton con vincoli della bandierina4-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bandierina_4"
            android:layout_width="54dp"
            android:layout_height="78dp"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:scaleX="-1"
            app:lottie_rawRes="@raw/waving_flag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.221"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52" />




        <!-- ImageButton con vincoli della bandierina3-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bandierina_3"
            android:layout_width="54dp"
            android:layout_height="78dp"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:scaleX="-1"
            app:lottie_rawRes="@raw/waving_flag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.43"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.63" />


        <!-- ImageButton con vincoli della bandierina2-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bandierina_2"
            android:layout_width="54dp"
            android:layout_height="78dp"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:scaleX="-1"
            app:lottie_rawRes="@raw/waving_flag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.677"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.73" />


        <!-- ImageButton con vincoli della bandierina1-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bandierina_1"
            android:layout_width="54dp"
            android:layout_height="78dp"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:scaleX="-1"
            app:lottie_rawRes="@raw/waving_flag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.86" />


        <!-- ImageView per il personaggio-->
        <ImageView
            android:id="@+id/overlayImage"
            android:layout_width="104dp"
            android:layout_height="160dp"
            android:src="@drawable/skin_bimbo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.257"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
