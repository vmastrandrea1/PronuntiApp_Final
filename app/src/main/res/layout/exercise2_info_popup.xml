<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="#D3B106"
    android:padding="5dp"
    android:layout_gravity="center"
    android:scrollbars="vertical">

    <TextView
        android:id="@+id/exercise2_text_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/cerclebackground"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exercise2_profile_image"
            android:layout_width="183dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_exercise" />

        <TextView
            android:id="@+id/id_esercizio2_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esercizio 2"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/frase1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frase 1: "
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/frase2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frase 2: "
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/frase3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frase 3: "
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_exercise_2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="180dp"
        android:text="Elimina Esercizio"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/ic_delete"
        android:background="@drawable/bg_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deassign_exercise_2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-40dp"
        android:text="Rimuovi Assegnazione"
        android:drawableStart="@drawable/ic_exercise"
        android:background="@drawable/bg_btn"
        android:visibility="gone"/>
</LinearLayout>