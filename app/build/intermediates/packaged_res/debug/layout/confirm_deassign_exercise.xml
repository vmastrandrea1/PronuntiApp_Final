<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:backgroundTint="@color/blue"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_deassign_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Sei sicuro di voler rimuovere la terapia dal paziente ... ?"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="italic"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_deassign"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="âœ“"
            android:textStyle="bold"
            android:textSize="25dp"
            android:background="@drawable/cerclebackground"
            android:backgroundTint="#12FF00"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/discard_deassign"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="X"
            android:textStyle="bold"
            android:textSize="25dp"
            android:background="@drawable/cerclebackground"
            android:backgroundTint="#FF0000"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="-50dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
