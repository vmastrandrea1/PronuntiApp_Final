<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_cielo"
    android:id="@+id/wallpaper_game">

    <!-- ImageView per il percorso-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/map_sentiero"
        app:layout_constraintTop_toTopOf="parent">


        <!-- ImageButton con vincoli della bandierina4-->
        <ImageButton
            android:id="@+id/bandierina_4"
            android:layout_width="54dp"
            android:layout_height="78dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/bandierina"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.221"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.486" />

        <!-- ImageButton con vincoli della bandierina2-->
        <ImageButton
            android:id="@+id/bandierina_2"
            android:layout_width="54dp"
            android:layout_height="78dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/bandierina"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.677"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.717" />

        <!-- ImageButton con vincoli della bandierina3-->
        <ImageButton
            android:id="@+id/bandierina_3"
            android:layout_width="54dp"
            android:layout_height="78dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/bandierina"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.43"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.628" />

        <!-- ImageButton con vincoli della bandierina1-->
        <ImageButton
            android:id="@+id/bandierina_1"
            android:layout_width="54dp"
            android:layout_height="78dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/bandierina"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.858"
            tools:ignore="MissingConstraints" />

        <!-- ImageButton con vincoli della bandierina5-->
        <ImageButton
            android:id="@+id/bandierina_5"
            android:layout_width="54dp"
            android:layout_height="78dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/bandierina"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.372"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.392" />

        <!-- ImageButton con vincoli del regalo-->
        <ImageButton
            android:id="@+id/regalo"
            android:layout_width="73dp"
            android:layout_height="69dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/regalo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.252"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.236" />

        <!-- ImageView per il personaggio-->
        <ImageView
            android:id="@+id/overlayImage"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/skin_bimbo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.299"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.874" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
