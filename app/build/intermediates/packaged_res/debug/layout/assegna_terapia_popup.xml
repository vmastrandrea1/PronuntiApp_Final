<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginHorizontal="16dp"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seleziona_gli_esercizi"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/select_exercise1_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn"
            android:spinnerMode="dropdown" />
        <Spinner
            android:id="@+id/select_exercise2_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn"
            android:spinnerMode="dropdown" />
        <Spinner
            android:id="@+id/select_exercise3_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn"
            android:spinnerMode="dropdown" />
        <Spinner
            android:id="@+id/select_exercise4_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn"
            android:spinnerMode="dropdown" />
        <Spinner
            android:id="@+id/select_exercise5_spinner"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:text="@string/seleziona_il_giorno"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"/>

            <CalendarView
                android:id="@+id/therapy_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_corners_button_grey"
                android:isScrollContainer="false"
                android:selectedWeekBackgroundColor="#FF0000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/confirm_therapy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners_button_red"
                    android:textColor="@color/white"
                    android:text="@string/assegna_terapia"
                    android:textAllCaps="true" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/discard_therapy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/annulla"
                    android:background="@drawable/rounded_corners_button_grey"
                    android:textAllCaps="true"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.cardview.widget.CardView>