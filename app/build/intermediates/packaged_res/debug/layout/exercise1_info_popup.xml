<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="475dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="25dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/blue"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#03A9F4"
        android:padding="5dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/exercise_text_close"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:drawableEnd="@drawable/ic_close"
            android:drawableTint="@color/white" />

        <ImageView
            android:id="@+id/exercise_profile_image"
            android:layout_width="183dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_exercise"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/id_esercizio1_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Esercizio 1"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/ex1_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-75dp"
                android:text="Immagine scelta: "
                android:textColor="@color/white" />

            <androidx.cardview.widget.CardView
                android:layout_width="109dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-110dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/ex1_image_viewer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="106dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-102dp"
            android:layout_marginTop="-170dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aiuto1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Aiuto 1: "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/aiuto2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Aiuto 2: "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/aiuto3_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Aiuto 3: "
                android:textColor="@color/white" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_exercise_1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/bg_btn"
            android:drawableStart="@drawable/ic_delete"
            android:text="Elimina Esercizio" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deassign_exercise_1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-40dp"
            android:text="Rimuovi Assegnazione"
            android:drawableStart="@drawable/ic_exercise"
            android:background="@drawable/bg_btn"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
